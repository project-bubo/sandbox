        <script type="text/javascript">
        var mediaJsConfig = {!$_presenter[media]->getMediaJsConfig()};

        $(function(){


            $('a.trigger-media-image-setting-form').live('click', function(e) {
                e.preventDefault();
                $('form.media-image-setting-form').submit();
            });




            $('.fileManager').height($('.drive_space').height()-20);
            $(window).resize(function(){
                $('.fileManager').height($('.drive_space').height()-20);
            });
            $("a.ajax").live("click", function (event) {
                event.preventDefault();
                $.get(this.href);
            });
            $("tr.click").live('click',function (event){
                $("<div id='spinner'></div>").css({ left : '0px', top : '0px',position: 'absolute', width: '100%', height: '100%'});
                $.get($(this).attr('href'));
                $('#spinner').remove();
            });
            $("tr.fileline").live('click',function (event){
                $('tr').css({ backgroundColor:'#fff'});
                $(this).css({ backgroundColor:'#ccc'});
            });
            /* AJAXové odeslání formulářů */
            $("form.ajax").live("submit", function () {
                $(this).ajaxSubmit();
                return false;
            });
//
//            $("form.ajax :submit").live("click", function () {
//                $(this).ajaxSubmit();
//                return false;
//            });


        });
        </script>
